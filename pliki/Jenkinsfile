pipeline {
    agent any

    triggers {
        pollSCM('*/3 * * * *')
    }

    stages {
        stage('Build') {
            steps {
                echo "Building ..."
                script {
                    dir('dockery') {
                        sh 'docker build -t ob_build:latest -f Dockerfile .'
                        sh 'docker run --name container_build ob_build:latest'
                    }
                }
            }
        }

    stage('Test') {
        steps {
            echo "Testing ..."
            script {
                dir('dockery') {
                    sh 'docker build -t ob_test:latest -f DockerfileTest .'
                    sh 'docker run --name container_test ob_test:latest'
                }
            }
        }
    }

    stage('logi') {
        steps {
            echo 'logi:'
            script {
                dir('dockery') {
                    sh 'docker logs container_build > logi-build.txt'
                    sh 'docker logs container_test > logi-test.txt'
                }
            }
        }
    }

    }
}