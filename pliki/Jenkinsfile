pipeline {
    agent any

    triggers {
        pollSCM('*/3 * * * *')
    }

    stages {
        stage('Build') {
            steps {
                echo "Build and test"
                sh '''
                cd ./pliki/dockery
                docker compose up --exit-code-from test
                '''
            }
        }
        stage('logi') {
            steps {
                echo 'logi:'
                sh '''
                cd ./pliki/dockery
                docker logs ob_build:latest > logi-build.txt
                docker logs ob_test:latest > logi-test.txt
                docker compose down
                '''
            }
        }
    }
}